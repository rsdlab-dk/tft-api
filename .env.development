# TFT Arena - Development Environment Configuration

# =====================================================
# Server Configuration
# =====================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENVIRONMENT=development
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s
SERVER_SHUTDOWN_TIMEOUT=30s
SERVER_MAX_HEADER_BYTES=1048576
SERVER_TRUSTED_PROXIES=127.0.0.1,::1

# =====================================================
# Database Configuration
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tft_arena_dev
DB_USER=tft_user
DB_PASSWORD=your_secure_password_here
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_MAX_IDLE_TIME=15m
DB_MAX_LIFETIME=1h

# =====================================================
# Redis Configuration
# =====================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DATABASE=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=2
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_POOL_TIMEOUT=4s

# =====================================================
# NATS Configuration
# =====================================================
NATS_URLS=nats://localhost:4222
NATS_MAX_RECONNECTS=-1
NATS_RECONNECT_WAIT=2s
NATS_TIMEOUT=30s
NATS_DRAIN_TIMEOUT=30s
NATS_PING_INTERVAL=2m
NATS_MAX_PINGS_OUT=2

# =====================================================
# Riot Games API Configuration
# =====================================================
RIOT_API_KEY=RGAPI-your-development-key-here
RIOT_RATE_LIMIT=100
RIOT_RATE_LIMIT_WINDOW=2m
RIOT_DEFAULT_REGION=kr
RIOT_REQUEST_TIMEOUT=30s
RIOT_MAX_RETRIES=3
RIOT_RETRY_BACKOFF=1s
RIOT_USER_AGENT=TFT-Arena-Dev/1.0

# =====================================================
# Cache Configuration
# =====================================================
CACHE_DEFAULT_TTL=5m
CACHE_LEADERBOARD_TTL=30m
CACHE_PLAYER_TTL=15m
CACHE_COMPOSITION_TTL=1h
CACHE_META_TTL=2h
CACHE_MATCH_TTL=24h
CACHE_CLEANUP_INTERVAL=10m
CACHE_COMPRESSION_ENABLED=true
CACHE_COMPRESSION_THRESHOLD=1024

# =====================================================
# Jobs Configuration
# =====================================================
JOBS_WORKER_COUNT=3
JOBS_QUEUE_BUFFER=500
JOBS_PROCESSING_TIMEOUT=10m
JOBS_COLLECTION_INTERVAL=10m
JOBS_ANALYSIS_INTERVAL=1h
JOBS_LEADERBOARD_REFRESH_INTERVAL=30m
JOBS_META_UPDATE_INTERVAL=2h
JOBS_CLEANUP_INTERVAL=24h
JOBS_MAX_RETRIES=3
JOBS_RETRY_BACKOFF=30s

# =====================================================
# Authentication Configuration
# =====================================================
JWT_SECRET=your-super-secret-jwt-key-for-development-only
JWT_EXPIRATION=24h
REFRESH_EXPIRATION=168h
BCRYPT_COST=10
SESSION_TIMEOUT=30m
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# =====================================================
# Metrics Configuration
# =====================================================
METRICS_ENABLED=false
METRICS_HOST=0.0.0.0
METRICS_PORT=9090
METRICS_PATH=/metrics
METRICS_COLLECT_INTERVAL=30s
METRICS_NAMESPACE=tft_arena_dev